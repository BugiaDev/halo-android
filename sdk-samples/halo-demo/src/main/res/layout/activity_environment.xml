<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp">

            <LinearLayout
                android:id="@+id/ll_environment_container"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="@dimen/default_padding_small"
                android:background="?attr/selectableItemBackground">

                <com.mobgen.halo.android.app.ui.views.HaloTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_big"
                    android:layout_gravity="center_vertical"
                    android:text="@string/environment_title"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_environment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/medium_gray"
                    android:gravity="end"
                    android:layout_weight="1"
                    tools:text="QA" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_line_divider"
                android:background="@color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="@dimen/default_padding_small">

                <com.mobgen.halo.android.app.ui.views.HaloTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_big"
                    android:layout_gravity="center_vertical"
                    android:text="@string/client_id_info"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_client_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_weight="1"
                    android:textColor="@color/medium_gray"
                    android:gravity="end"
                    tools:text="my_app" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_line_divider"
                android:background="@color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="@dimen/default_padding_small">

                <com.mobgen.halo.android.app.ui.views.HaloTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_big"
                    android:layout_gravity="center_vertical"
                    android:text="@string/application_version_info"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_weight="1"
                    android:textColor="@color/medium_gray"
                    android:gravity="end"
                    tools:text="1.0-SNAPSHOT" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_line_divider"
                android:background="@color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="@dimen/default_padding_small">

                <com.mobgen.halo.android.app.ui.views.HaloTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_big"
                    android:layout_gravity="center_vertical"
                    android:text="@string/bamboo_build_info"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_bamboo_build"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_weight="1"
                    android:textColor="@color/medium_gray"
                    android:gravity="end"
                    tools:text="123" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_line_divider"
                android:background="@color/black" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding_small">

                <com.mobgen.halo.android.app.ui.views.HaloTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_big"
                    android:layout_gravity="center_vertical"
                    android:text="@string/user_alias_info"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_user_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_weight="1"
                    android:textColor="@color/medium_gray"
                    tools:text="user" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_line_divider"
                android:background="@color/black" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding_small">

                <com.mobgen.halo.android.app.ui.views.HaloTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_big"
                    android:layout_gravity="center_vertical"
                    android:text="@string/gcm_token_info" />

                <TextView
                    android:id="@+id/tv_gcm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/medium_gray"
                    tools:text="gcmToken" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_database_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.mobgen.halo.android.app.ui.views.HaloTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_database"
                android:textSize="@dimen/text_size" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_delete_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_storage_white_24dp"
                android:layout_margin="@dimen/default_margin" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>